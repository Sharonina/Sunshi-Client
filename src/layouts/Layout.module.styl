header
  width: 100vw
  height: 20vh
  & .headerSup
    margin: 1%
    height: 58%
    display: flex
    justify-content: space-between
    & figure
      width: 30%
      height: 100%
      display: flex
      align-items: center
      & img
        width: 100%
  & .headerSupRight
    width: 30%
    height: 100%
    display: flex
    justify-content: flex-end
    align-items: center
    padding-right: .5rem
    & div
      display: flex
      flex-direction: column
      align-items: flex-end
      height: 3.9rem
      margin-right: 1rem
      justify-content: flex-end
      & .date
        color: var(--gray)
        font-size: 1.4vw
        margin-bottom: .3rem
      & .userName
        color: var(--white)
        font-size: 1.8vw
    & button
      background: url("@/assets/futomaki.png") no-repeat
      background-size: 75%;
      background-position: center
      cursor: pointer
      width: 4rem
      background-color: var(--principal-gray)
      height: 4rem
      border-radius: .7rem
      border-bottom: .3rem solid var(--principal-gray-dark)
      border-right: .3rem solid var(--principal-gray-dark)
      border-top: .3rem solid var(--principal-gray-light)
      border-left: .3rem solid var(--principal-gray-light)
      transition: 0.5s;
      &:hover
        scale: (1.1)
        box-shadow: 0 0 .5rem var(--principal-gray-dark);
    & .optionsMenu
      position: absolute
      background-color: var(--principal-gray)
      width: 15%
      right: 0.26rem
      top: 5.1rem
      height: 10%
      color: var(--white)
      font-size: 1.2rem
      border-radius: .7rem 0 .7rem .7rem
      justify-content: center
      border-bottom: 0.3rem solid var(--principal-gray-dark);
      border-right: 0.3rem solid var(--principal-gray-dark);
      border-left: 0.3rem solid var(--principal-gray-light);
      & a
        text-decoration: none
        color: var(--white)
        width: 100%
        text-align: center
        margin: .3rem 0
        &:hover
          color: var(--jade)
  & nav
    height: 35%
    width: 100%
    border-bottom: .3rem solid var(--principal-gray-dark)
    border-top: .3rem solid var(--principal-gray-light)
    display: flex
    align-items: center
    justify-content: space-around
    & a
      font-size: 2vw
      color: var(--white)
      text-decoration: none
      transition: 0.5s;
      &:hover
        color: var(--green-light)
        scale: (1.1)

.isLinkActive
  color: var(--green)
