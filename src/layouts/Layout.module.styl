header
  width: 100vw
  height: 20vh
  & .headerSup
    margin: 1% 
    height: 58%
    display: flex
    justify-content: space-between
    & figure
      width: 30%
      height: 100%
      display: flex;
      align-items: center;
      & img
        width: 100%
  & .headerSupRight
    width: 30%
    height: 100%
    display: flex
    justify-content: flex-end
    align-items: center
    padding-right: .5rem
    & div
      display: flex
      flex-direction: column
      align-items: flex-end
      height: 3.9rem
      margin-right: 1rem
      justify-content: flex-end
      & .date
        color: var(--gray)
        font-size: 1.4vw
        margin-bottom: .3rem;
      & .userName
        color: var(--white)
        font-size: 1.8vw
    & button
      cursor: pointer
      width: 4rem
      background-color: var(--principal-gray)
      height: 4rem
      border-radius: .7rem
      border-bottom: .3rem solid var(--principal-gray-dark)
      border-right: .3rem solid var(--principal-gray-dark)
      border-top: .3rem solid var(--principal-gray-light)
      border-left: .3rem solid var(--principal-gray-light)
  & nav
    height: 35%
    width: 100%
    border-bottom: .3rem solid var(--principal-gray-dark)
    border-top: .3rem solid var(--principal-gray-light)
    display: flex
    align-items: center
    justify-content: space-around
    & a
      font-size: 2vw
      color: var(--white)
      text-decoration: none
      &:hover
        color: var(--green-light)
        font-size: 2.2vw
