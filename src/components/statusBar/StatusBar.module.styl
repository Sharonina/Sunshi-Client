.statusBar
  display: flex
  width: 100%
  .stepContainer
    display: flex
    flex-direction: column
    align-items: center
    flex: 1
    position: relative
    &::before
      content: ''
      border-bottom: .3rem solid var(--gray)
      width: 100%
      position: absolute
      top: 12%
      left: -50%
      z-index: 2
    &:first-child::before
      content: none
    &:last-child::after
      content: none
    & .stepTitle
      font-size: 1vw
      font-weight: bold
      text-transform: uppercase
      color: var(--gray)
      margin-left: .5rem
      margin-top: 2rem
    & .active
      color: var(--jade-light)
    & .stepCircle
      position: absolute
      z-index: 5
      display: flex
      justify-content: center
      align-items: center
      width: 1rem
      height: 1rem
      border-radius: 50%
      background-color: var(--gray)
      margin-bottom: .2rem
  & .complete
    & .stepCircle
      background-color: var(--jade)
    &::after
      content: ''
      border-bottom: .3rem solid var(--jade-light)
      width: 100%
      position: absolute
      top: 12%
      left: 50%
      z-index: 3