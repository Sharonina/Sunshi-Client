.detailContainer
  display: grid
  grid-template-rows: repeat(12, 1fr)
  height: 100%
  padding-left: 1rem;
  & figure
    grid-row: span 10
    & img
      width: 100%
      height: 100%
      object-fit: cover
      border-radius: 1rem 1rem 0 0;
  & div
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    grid-row: span 2
    background-color: #161616
    border-radius: 0 0 1rem 1rem; 
    border-top: .1rem solid var(--gray);
    & span
      padding 0 2rem
      font-size: 2vw