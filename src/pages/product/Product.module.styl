.products
  display: flex
  flex-direction: row
  width: 100%
  height: 80vh
  padding: 1rem
  & section
    width: 50%
  & section:nth-child(1)
    border-right: .1rem solid var(--gray)
    padding: 0 1rem 0 0;
  & h2
    width: 100%;
    height: 8rem;
    border-radius: 0.7rem;
    border-bottom: 0.2rem solid var(--principal-gray-dark);
    border-right: 0.2rem solid var(--principal-gray-dark);
    border-top: 0.2rem solid var(--principal-gray-light);
    border-left: 0.2rem solid var(--principal-gray-light);
    font-size: 3vw;
    font-weight: 500;
    text-indent: 2rem;