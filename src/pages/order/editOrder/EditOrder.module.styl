.detailContainer
  width: 97%;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 1rem;
  flex-direction: column;
  background-color: var(--principal-gray-dark);
  border-radius: 0.5rem;
  position: relative;
  & .detailStatus
    width: 95%;
    height: 12%;
    display: flex;
    padding: 0 1rem;
    align-items: flex-end;
    justify-content: center;
    & h2
      font-size: 2.5vw;
      font-weight: 600;
      padding-bottom: 0.3rem;
    & .orderTools
      position: absolute
      right: 1rem
      top: 0
      & button
        background: url(/src/assets/closeIcon.png) no-repeat;
        background-size: 60%;
        background-position: center;
        cursor: pointer;
        margin-top: 1rem;
        width: 1.6rem;
        height: 1.6rem;
        color: var(--gray-light);
        border: none;
  & .detailBottom
    width: 100%;
    height: 11%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    bottom: 0;
    & .button
      width: 100%;
      height: 100%;
      font-size: 2vw;
      & button
        border-radius: 0 0 .5rem .5rem;
        background-color: var(--jade)
        color: var(--white);
        font-size: 2vw;
        font-weight: 600;
        &:hover
          background-color: var(--jade-light)


.productItem
  padding-right: 2em
  display: grid
  grid-template-colums: repeat(3, 1fr)
  & .productItemDescription
    display flex
    flex-direction: column