.orders
  display: flex
  flex-direction: row
  width: 100%
  height: 78vh
  padding: 1rem
  & section
    width: 50%
    height: 100%;
    display: grid;
  & section:nth-child(1)
    border-right: .1rem solid var(--gray)
    padding: 0 1rem 0 0;
  & .orderItem
    height: 9rem
    background-color: var(--white);
    border-radius: .5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer
    transition: 0.5s;
    &:hover
      box-shadow: 0 0 0.8rem var(--pink);
    & .orderStatus
      background-color: var(--pink-light);
      height: 28%;
      display: flex;
      align-items: center;
      justify-content: center;
      & p
        color: var(--principal-gray-dark);
        font-size: 1.5vw;
        font-weight: 600;
    & .orderTable
      font-size: 3vw
      color: var(--principal-gray);
      font-weight: 600;
      margin-top: 1rem;
    & .orderClient
      font-size: 2vw
      color: var(--principal-gray);
      margin-top: .2rem;