.orderDetailContainer
  width: 97%
  height: 100%
  display: flex
  align-items: center
  justify-content: center
  margin-left: 1rem
  flex-direction: column
  & .rightNewOrder
    background: none
    border: .6rem solid var(--gray-dark)
    width: 7rem
    height: 7rem
    border-radius: 1rem
    cursor: pointer
    font-size: 5vw
    color: var(--gray-dark)
    transition: 0.5s
    &:hover
      border: .6rem solid var(--jade-light)
      color: var(--jade-light)
  & .rightMessage
    font-size: 2vw
    color: var(--gray-dark)
    margin-top: 1.5rem
    width: 16rem
    text-align: center

.orderSelectedContainer
  width: 97%
  height: 100%
  display: flex
  align-items: center
  margin-left: 1rem
  flex-direction: column
  background-color: var(--principal-gray-dark)
  border-radius: .5rem
  padding: 0 1rem
  & .orderHeader
    width: 95%
    height: 12%
    display: flex
    justify-content: space-between
    & .status
      height: 100%
      width: 50%
      display: flex;
      align-items: flex-end;
      & div
        background-color: var(--pink)
        width: 10%
        height: 100%
        border-radius: 0 0 1rem 1rem;
        margin-right: 1rem
      & p
        font-size: 2.5vw;
        padding-bottom: .3rem;
        font-weight: 600;
    & .optionButtons
      width: 30%;
      height: 100%;
      display: flex;
      justify-content: flex-end;
      align-items: flex-start;
      & button
        margin-top: 1rem
        width: 2rem;
        height: 2rem;
        color: var(--gray-light)
        background: none
        border: none;
        margin-left: 1rem;
  & .orderClientInfo
    width: 95%;
    display: flex;
    justify-content: space-between;
    height: 5%;
    margin-top: 1rem;
    font-size: 1.6vw;
    align-items: center;
    & div
      display: flex
    & .clientInfo
      padding-left: 1rem;
      font-weight: 200
  & .orderItems
    width: 95%;
    height: 46%;
    margin-top: 1rem;
    font-size: 1.6vw;
    & .productName
      font-size: 1.5vw
    & ul
      margin-top: 1rem
      display: flex;
      flex-direction: column;
      align-items: center;
      & li
        width: 85%
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        font-weight: 100;
        & div
          display: flex;
          flex-direction: column;
          width: 40%;

.productXQuantity
  color: var(--gray-dark);
  font-size: 1.1vw;
  margin-top: .5rem;
.quantity
  text-align: center
  font-size: 1.5vw;
.productTotal
  width: 20%
  text-align: end;
  font-size: 1.5vw;
        