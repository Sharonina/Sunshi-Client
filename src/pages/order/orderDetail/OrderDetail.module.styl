.orderDetailContainer
  width: 97%
  height: 100%
  display: flex
  align-items: center
  justify-content: center
  margin-left: 1rem
  flex-direction: column
  & .rightNewOrder
    background: none
    border-bottom: 0.6rem solid var(--jade);
    border-right: 0.6rem solid var(--jade);
    border-top: 0.6rem solid var(--jade-light);
    border-left: 0.6rem solid var(--jade-light);
    width: 7rem
    height: 7rem
    border-radius: 1rem
    cursor: pointer
    font-size: 5vw
    color: var(--jade-light)
    transition: 0.5s
    &:hover
      border-top: 0.6rem solid var(--jade);
      border-left: 0.6rem solid var(--jade);
      border-right: 0.6rem solid var(--jade-light);
      border-bottom: 0.6rem solid var(--jade-light);
      color: var(--jade)
  & .rightMessage
    font-size: 2vw
    color: var(--gray-dark)
    margin-top: 1.5rem
    width: 16rem
    text-align: center

.orderSelectedContainer
  width: 97%
  height: 100%
  display: flex
  align-items: center
  margin-left: 1rem
  flex-direction: column
  background-color: var(--principal-gray-dark)
  border-radius: .5rem
  & .orderHeader
    width: 95%
    height: 12%
    display: flex
    justify-content: space-between
    padding: 0 1rem
    & .status
      height: 100%
      width: 50%
      display: flex;
      align-items: flex-end;
      & div
        background-color: var(--pink)
        width: 10%
        height: 100%
        border-radius: 0 0 1rem 1rem;
        margin-right: 1rem
      & p
        font-size: 2.5vw;
        padding-bottom: .3rem;
        font-weight: 600;
    & .optionButtons
      width: 30%;
      height: 100%;
      display: flex;
      justify-content: flex-end;
      align-items: flex-start;
      & .deleteButton
        background: url("@/assets/deleteIcon.png") no-repeat
        background-size: 70%;
        background-position: center
      & .editButton
        background: url("@/assets/editIcon.png") no-repeat
        background-size: 70%;
        background-position: center
      & button
        cursor: pointer
        margin-top: 1rem
        width: 1.6rem;
        height: 1.6rem;
        color: var(--gray-light)
        background: none
        border: none;
        margin-left: 1rem;
    & .closeButton
      background: url("@/assets/closeIcon.png") no-repeat
      background-size: 60%;
      background-position: center
      cursor: pointer;
      margin-top: 1rem;
      width: 1.6rem;
      height: 1.6rem;
      color: var(--gray-light);
      border: none;
  & .orderClientInfo
    width: 95%;
    display: flex;
    justify-content: space-between;
    height: 5%;
    margin-top: 1rem;
    font-size: 1.6vw;
    align-items: center;
    padding: 0 1rem
    & div
      display: flex
    & .clientInfo
      padding-left: 1rem;
      font-weight: 200
  & .orderItems
    width: 95%;
    height: 45%;
    max-height: 45%;
    overflow: auto;
    margin-top: 1rem;
    font-size: 1.6vw;
    padding: 0 1rem
    & .productName
      font-size: 1.5vw
    & ul
      margin-top: 1rem
      display: flex;
      flex-direction: column;
      align-items: center;
      & li
        width: 85%
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        font-weight: 100;
        & div
          display: flex;
          flex-direction: column;
          width: 40%;
  & .totalOrder
    font-size: 1.6vw;
    padding: 0 1rem;
    width: 95%;
    height: 6%;
    display: flex;
    align-items: center;
    & span
      width: 100%;
      padding-right: 2rem;
      text-align: end;
  & .statusBarContainer
    display: flex;
    align-items: center;
    justify-content: center;
    height: 16%;
    margin-top: 1%;
    width: 100%;
    background-color: #191919;
    border-top: .2rem solid var(--gray-dark);
  & .changeStatusBtn
    width: 100%;
    height: 11%;
    & button
      background-color: var(--red)
      width: 100%
      height: 100%
      border: none;
      color: var(--white);
      font-size: 2vw;
      font-weight: 600;
      border-radius: 0 0 .5rem .5rem;
      cursor: pointer
      &:hover
        background-color: var(--red-dark)

.productXQuantity
  color: var(--gray-dark);
  font-size: 1.1vw;
  margin-top: .5rem;
.quantity
  text-align: center
  font-size: 1.5vw;
.productTotal
  width: 20%
  text-align: end;
  font-size: 1.5vw;
        